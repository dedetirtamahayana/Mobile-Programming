<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="kembali"
            android:backgroundTint="#1E2223"
            android:background="@drawable/ic_chevron_left_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="OnClick" />
        <TextView
            android:textColor="#000"
            android:fontFamily=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"
            android:text="Luas Segitiga"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtalas"
                android:hint="Alas" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txttinggi"
                android:hint="Tinggi" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="#2962ff"
            android:textColor="#FFF"
            android:id="@+id/btnhitungluas"
            android:textStyle="bold"
            android:text="Hitung Luas"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/txthasil"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="300dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"
            android:text="Keliling Segitiga"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sisi1"
                android:hint="Sisi 1" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sisi2"
                android:hint="Sisi 2" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sisi3"
                android:hint="Sisi 3" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="#2962ff"
            android:textColor="#FFF"
            android:id="@+id/btnhitungkll"
            android:textStyle="bold"
            android:text="Hitung Keliling"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/txthasilkll"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="300dp"
            android:layout_height="40dp"/>
    </LinearLayout>



</LinearLayout>