<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgapps"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="kembali"
            android:backgroundTint="#1E2223"
            android:background="@drawable/ic_chevron_left_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="#fff"
            android:fontFamily=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/paprika"
            android:gravity="center"
            android:padding="15dp"
            android:text="Halaman Profile"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnprofil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:background="@drawable/contact"
                android:paddingTop="30dp"
                android:textColor="#FFF"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NIM : 18101140"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
        <TextView
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Nama : I Made Tirta Mahayana"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
        <TextView
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Jurusan : TI-MTI"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:textColor="#fff"
            android:onClick="logout"
            android:background="@drawable/backlogout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:height="60dp"
            android:text="Logout"
            android:layout_marginBottom="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center" />

    </LinearLayout>


</LinearLayout>